<Page x:Class="UIKitTutorials.Pages.TestPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UIKitTutorials.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="800"
      xmlns:material="http://materialdesigninxaml.net/winfx/xaml/themes">

    <Border CornerRadius="5" Background="{DynamicResource SecundaryBackgroundColor}">
        <Grid>
            <Button Margin="525,234,0,234" Click="Button_Click"/>
            <ListView Margin="0,0,300,170" x:Name="usrList">
                <ListView.ItemTemplate>
                    <DataTemplate>

                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Image Source="{Binding photo_100}"/>
                            <TextBlock Text="{Binding first_name}"/>

                        </StackPanel>

                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <TextBox TextWrapping="Wrap" x:Name="txtResponce" Cursor="Arrow" Text="{Binding ElementName=this, Path=Content}" Margin="525,295,10,45"/>
        </Grid>
    </Border>
</Page>
